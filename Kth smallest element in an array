
class Solution {
  public:
   
    int kthSmallest(vector<int> &arr, int k) {
        priority_queue<int>maxi;
        for(int i=0;i<k;i++)
        {
            maxi.push(arr[i]);
        }
        for(int i=k;i<arr.size();i++)
        {
            if(arr[i]<maxi.top())
            {
                maxi.pop();
                maxi.push(arr[i]);
            }
        }
        
        return maxi.top();
        
    }
};
