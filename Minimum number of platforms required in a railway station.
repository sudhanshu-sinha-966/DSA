class Solution {
  public:
    
    int findPlatform(vector<int>& arr, vector<int>& dep) {
        sort(dep.begin(),dep.end());
        sort(arr.begin(),arr.end());
        
        int i=0,j=0,count=0,maxcount=0;
        
        while(i<arr.size()&&j<dep.size())
        {
            if(arr[i]<=dep[j])
            {
                count++;
                i++;
            }
            else
            {
                count--;
                j++;
            }
            maxcount=max(maxcount,count);
        }
        
        return maxcount;
    }
};
